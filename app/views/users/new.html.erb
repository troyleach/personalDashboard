<div class="signup-container" style="border:1px solid #ccc; margin-top: 64px">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <p>
        Already have an account? <%= link_to 'Click here to sign in.', login_path, class: 'btn btn-primary w3-margin-left' %>
    </p>
    <hr>

    <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
        <p> Username:</br> <%= f.text_field :username, :placeholder => 'Enter Username' %> </p>
        <p> Email:</br> <%= f.text_field :email, :placeholder => 'Enter Email'%> </p>
        <p> Password:</br> <%= f.password_field :password, :placeholder => 'Enter Password'%></p>
        <p> Password Confirmation:</br> <%= f.password_field :password_confirmation, :placeholder => 'Repeat Password' %> </p>
        <div class="signupbtn-container">
            <%= f.submit :Signup, :class => 'signup-button' %>
        </div>
    <% end %>

    <!-- Below is the code that needs to go in for displaying errors messages -->
    <% if @user.errors.any? %>
        <ul class="Signup_Errors">
            <% for message_error in @user.errors.full_messages %>
                <li class="alert alert-warning"><%= message_error %></li>
            <% end %>
        </ul>
    <% end %>
</div>