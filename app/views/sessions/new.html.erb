<div class="signup-container" style="border:1px solid #ccc; margin-top: 64px">
    <h1>Authentication Required</h1>
    <p>Please log in to continue.</p>
    <p>
        New User? <%= link_to 'Click here to create an account.', new_user_path, class: 'btn btn-primary w3-margin-left' %>
    </p>
    <hr>





<%- if flash[:error] %>
  <%= flash[:error] %>
<% elsif flash[:success] %>
  <%= flash[:success] %>
<% end %>

<%= form_for :session, url: sessions_path do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>


    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>


    <%= f.submit 'Log In', class: 'btn btn-primary' %>

<% end %>

</div>